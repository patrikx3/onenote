{
    "name": "p3x-onenote",
    "version": "2019.10.116",
    "description": "ðŸ“š P3X OneNote Linux",
    "main": "src/electron/app.js",
    "corifeus": {
        "snap": true,
        "prefix": "p3x-",
        "publish": true,
        "type": "p3x",
        "code": "Linux",
        "nodejs": "v12.6.0",
        "opencollective": true,
        "reponame": "onenote",
        "build": true
    },
    "bin": {
        "p3x-onenote": "bin/p3x-onenote.js"
    },
    "scripts": {
        "test": "grunt",
        "build": "electron-builder --ia32 --x64  build/dist",
        "postinstall": "opencollective postinstall",
        "start": "node ./node_modules/.bin/electron ./src/electron/app.js",
        "publish-electron": "electron-builder --ia32 --x64 --linux -p always",
        "publish-electron-snap": "electron-builder --linux snap"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/patrikx3/onenote.git"
    },
    "keywords": [
        "onenote",
        "linux"
    ],
    "author": "Patrik Laszlo <alabard@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/patrikx3/onenote/issues"
    },
    "homepage": "https://pages.corifeus.com/onenote",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.9.0",
        "angular": "^1.7.8",
        "angular-animate": "^1.7.8",
        "angular-aria": "^1.7.8",
        "angular-material": "^1.1.19",
        "angular-messages": "^1.7.8",
        "configstore": "^4.0.0",
        "corifeus-utils": "^2019.10.117",
        "electron-updater": "^4.1.2",
        "jquery": "^3.4.1",
        "opencollective": "^1.0.3",
        "semver": "^6.2.0",
        "typeface-roboto": "0.0.54"
    },
    "devDependencies": {
        "electron": "=4.2.6",
        "fs-extra": "^8.1.0",
        "jsdom": "^15.1.1",
        "angular-mocks": "^1.7.8",
        "corifeus-builder": "^2019.10.121",
        "electron-builder": "^21.0.15"
    },
    "engines": {
        "node": ">=10.16.0"
    },
    "build-save": {
        "afterPack": "./src/build/after-pack.js"
    },
    "build": {
        "publish": [
            {
                "provider": "github",
                "owner": "patrikx3",
                "repo": "onenote"
            }
        ],
        "appId": "p3x.onenote",
        "copyright": "MIT",
        "productName": "P3X OneNote",
        "linux": {
            "category": "Office",
            "icon": "src/electron/images/",
            "target": [
                "AppImage"
            ]
        }
    },
    "collective": {
        "type": "opencollective",
        "url": "https://opencollective.com/p3x-onenote"
    }
}
